
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for the custom claim 'isAdmin' on the auth token
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for the users collection
    match /users/{userId} {
      // A user can create their own profile, but they cannot assign themselves as admin.
      // The document must not exist yet.
      allow create: if isSignedIn() 
                    && isOwner(userId) 
                    && request.resource.data.isAdmin == false
                    && !exists(/databases/$(database)/documents/users/$(userId));
      
      // Any signed-in user can read public user data (needed for referral checks)
      allow get: if isSignedIn();
      
      // An owner can update their own profile, but cannot change their admin status.
      allow update: if isOwner(userId) && 
                    request.resource.data.isAdmin == resource.data.isAdmin;

      // Only admins can delete user documents
      allow delete: if isAdmin();
    }
    
    // Rules for the daily_logins collection
    match /daily_logins/{loginId} {
        // A user can create a login record for themselves for the current day.
        // The document ID must be in the format 'userId_YYYY-MM-DD'.
        // The document should only contain the 'claimedAt' field.
        allow create: if isSignedIn() 
                      && request.resource.data.size() == 1 
                      && "claimedAt" in request.resource.data
                      && loginId.split('_')[0] == request.auth.uid;

        // Nobody can update or delete login records.
        allow update, delete: if false;

        // Only the owner can read their login records.
        allow get: if isSignedIn() && isOwner(loginId.split('_')[0]);
    }

    // Rules for the games collection
    match /games/{gameId} {
        // Any signed-in user can read game data.
        allow read: if isSignedIn();
        // Only admins can write (create, update, delete) game data.
        allow write: if isAdmin();
    }

    // Rules for the offers collection
    match /offers/{offerId} {
        // Any signed-in user can read offer data.
        allow read: if isSignedIn();
        // Only admins can write (create, update, delete) offer data.
        allow write: if isAdmin();
    }

    // Rules for the products collection
    match /products/{productId} {
        // Any signed-in user can read product data.
        allow read: if isSignedIn();
        // Only admins can write (create, update, delete) product data.
        allow write: if isAdmin();
    }

    // Rules for the offer_submissions collection
    match /offer_submissions/{submissionId} {
        // A user can create their own submission.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        
        // Admins can see all submissions. Regular users can only list/get their own.
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow list: if isAdmin() || (isSignedIn() && request.query.where.userId == request.auth.uid);

        // Only admins can update the status of a submission.
        allow update: if isAdmin() && request.resource.data.status != resource.data.status;
        
        // Nobody can delete submissions for now.
        allow delete: if false;
    }

    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
