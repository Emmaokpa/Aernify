
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    // Rules for the users collection
    match /users/{userId} {
      // An owner or an admin can create a user profile
      allow create: if isOwner(userId) || isAdmin();
      
      // Any signed-in user can read public user data (needed for referral checks)
      allow get: if isSignedIn();
      
      // An owner can update their own profile, but cannot change their coins or admin status
      allow update: if isOwner(userId) && !("coins" in request.resource.data) && !("isAdmin" in request.resource.data);
    }

    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
