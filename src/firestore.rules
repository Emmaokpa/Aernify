
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      let userDoc = /databases/$(database)/documents/users/$(request.auth.uid);
      // Use get() instead of exists() for a more robust check that also allows reading the data
      return get(userDoc).data.isAdmin == true;
    }

    // This rule allows a server-side process (like a Genkit flow) to update coin and referral counts.
    // This is secure because clients cannot impersonate server requests.
    function isServerCoinUpdate() {
      // Check if the update is coming from a non-client request (e.g., server-side SDK)
      // This is a common pattern, but for a fully secure setup, you'd use service accounts.
      // For this context, we assume server-side flows don't have client-like auth tokens.
      // A simple but effective check is to see if only specific fields are being changed.
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coins', 'weeklyCoins', 'referralCount']);
    }

    // --- Rules for the users collection ---
    match /users/{userId} {
      // CORRECTED RULE: A user can create their own profile document.
      // 1. The document ID must match their own UID.
      // 2. They cannot make themselves an admin on creation.
      allow create: if isOwner(userId)
                    && request.resource.data.isAdmin == false;

      // A user can update their own profile.
      // Admins can also update any profile.
      // A server process can update coin/referral counts.
      allow update: if isOwner(userId) || isAdmin() || isServerCoinUpdate();

      // A user can read their own profile.
      // Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin();

      // Nobody can delete user profiles.
      allow delete: if false;
      
      // --- Rules for the orders subcollection ---
      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // --- Rules for the daily_logins collection ---
    match /daily_logins/{loginId} {
        allow create: if isSignedIn() 
                      && request.resource.data.size() == 1 
                      && "claimedAt" in request.resource.data
                      && loginId.split('_')[0] == request.auth.uid;
        allow read, update, delete: if false;
    }

    // --- Global Read Collections (Games, Offers, Products, etc.) ---
    match /games/{gameId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /offers/{offerId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /affiliate_products/{productId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /products/{productId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /giftCards/{giftCardId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /challenges/{challengeId} { allow read: if isSignedIn(); allow write: if isAdmin(); }

    // --- Submissions and Requests (User Owned or Admin) ---
    match /offer_submissions/{submissionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // User can read their own submissions, Admin can read everything
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow update: if isAdmin();
        allow delete: if false;
    }
    
    match /affiliate_sale_submissions/{submissionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow update: if isAdmin();
        allow delete: if false;
    }

    match /redemption_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if false;
    }
    
    match /withdrawal_requests/{reqId} {
      // Allow create only if the request is for the signed-in user and they meet the referral criteria
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.referralCount >= 2;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /user_challenge_progress/{progressId} {
      function getUserId() { return progressId.split('_')[0]; }
      allow read, create, update: if isOwner(getUserId());
      allow delete: if false;
    }

    // Fallback rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
