
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      let userDoc = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userDoc) && get(userDoc).data.isAdmin == true;
    }

    // --- Rules for the users collection ---
    match /users/{userId} {
      // A user can create their own profile document.
      // The document ID must match their UID.
      // They cannot make themselves an admin on creation.
      allow create: if isOwner(userId)
                    && request.resource.data.isAdmin == false;

      // A user can read and update their own profile.
      // Admins can read/update any profile.
      allow read, update: if isOwner(userId) || isAdmin();

      // Nobody can delete user profiles.
      allow delete: if false;
      
      // --- Rules for the orders subcollection ---
      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // --- Rules for the daily_logins collection ---
    match /daily_logins/{loginId} {
        allow create: if isSignedIn() 
                      && request.resource.data.size() == 1 
                      && "claimedAt" in request.resource.data
                      && loginId.split('_')[0] == request.auth.uid;
        allow read, update, delete: if false;
    }

    // --- Global Read Collections (Games, Offers, Products, etc.) ---
    match /games/{gameId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /offers/{offerId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /affiliate_products/{productId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /products/{productId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /giftCards/{giftCardId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /challenges/{challengeId} { allow read: if isSignedIn(); allow write: if isAdmin(); }

    // --- Submissions and Requests (User Owned or Admin) ---
    match /offer_submissions/{submissionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow update: if isAdmin();
        allow delete: if false;
    }
    
    match /affiliate_sale_submissions/{submissionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow update: if isAdmin();
        allow delete: if false;
    }

    match /redemption_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if false;
    }
    
    match /withdrawal_requests/{reqId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
      allow delete: if false;
    }

    match /user_challenge_progress/{progressId} {
      function getUserId() { return progressId.split('_')[0]; }
      allow read, create, update: if isOwner(getUserId());
      allow delete: if false;
    }

    // Fallback rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
